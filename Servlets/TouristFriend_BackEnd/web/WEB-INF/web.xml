<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <display-name>WebViewOfImages</display-name>
        <servlet-name>WebViewOfImages</servlet-name>
        <servlet-class>sust.classnotfound.touristfriend.servlets.WebViewOfImages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImage</servlet-name>
        <servlet-class>sust.classnotfound.touristfriend.servlets.UploadImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateUser</servlet-name>
        <servlet-class>sust.classnotfound.touristfriend.servlets.ValidateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RateThisPlace</servlet-name>
        <servlet-class>sust.classnotfound.touristfriend.servlets.RateThisPlace</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebViewOfImages</servlet-name>
        <url-pattern>/WebViewOfImages</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/touristfriend_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet-mapping>
        <servlet-name>UploadImage</servlet-name>
        <url-pattern>/UploadImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateUser</servlet-name>
        <url-pattern>/ValidateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RateThisPlace</servlet-name>
        <url-pattern>/RateThisPlace</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
