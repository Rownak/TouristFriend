<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fcfd" >

    <TextView
        android:id="@+id/viewPinTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/emailSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:ems="12" 
        android:background="@drawable/round3"
        android:padding="5dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passwordSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/emailSE"
        android:background="@drawable/round3"
        android:ems="12"
        android:inputType="textPassword"
        android:padding="5dp" />

    <EditText
        android:id="@+id/conPassSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/passwordSE"
        android:background="@drawable/round3"
        android:ems="12"
        android:inputType="textPassword"
        android:padding="5dp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/conPassSE" 
        >

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />

    </RadioGroup>

    

    <EditText
        android:id="@+id/userNameSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clinet_moneyTxt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round3"
        android:ems="12"
        android:padding="5dp" />

    <Button
        android:id="@+id/signUpB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clinet_moneyTxt"
        android:layout_alignRight="@+id/conPassSE"
        android:layout_below="@+id/radioGroup1"
        android:background="@drawable/skype_button"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userNameSE"
        android:layout_below="@+id/userNameSE"
        android:text="Email "
        android:textColor="@color/bluedark" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailSE"
        android:layout_below="@+id/emailSE"
        android:text="Password "
        android:textColor="@color/bluedark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clinet_moneyTxt"
        android:layout_below="@+id/passwordSE"
        android:text="Confirm Password "
        android:textColor="@color/bluedark" />

    <TextView
        android:id="@+id/clinet_moneyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userNameSE"
        android:layout_below="@+id/viewPinTxt"
        android:layout_marginTop="38dp"
        android:text="User Name "
        android:textColor="@color/bluedark" />

</RelativeLayout>